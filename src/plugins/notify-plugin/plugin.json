{
  "name": "通知插件",
  "version": "1.0.0",
  "author": "LessonPlugin",
  "description": "前置类通知插件：队列化通知、TTS播报、类型音频与两种窗口样式",
  "id": "notify.plugin",
  "actions": [
    { "id": "openSettings", "text": "通知设置", "target": "openSettings", "icon": "ri-settings-3-line" }
  ],
  "npmDependencies": {
    "edge-tts-nodejs": "^1.5.7",
    "loudness": "^0.4.2"
  },
  "variables": ["timeISO", "queueSize", "systemVolume"]
  ,"configSchema": {
    "enabled": { "type": "boolean", "label": "启用通知", "desc": "总开关", "default": true },
    "tts": { "type": "boolean", "label": "启用TTS", "desc": "使用语音播报", "default": false },
    "ttsEngine": { "type": "select", "label": "TTS引擎", "desc": "system 或 edge.local", "options": ["system","edge.local"], "default": "system" },
    "ttsVoiceURI": { "type": "string", "label": "系统语音", "desc": "SpeechSynthesis voiceURI", "default": "" },
    "ttsEdgeVoice": { "type": "string", "label": "Edge 语音", "desc": "如 zh-CN-XiaoxiaoNeural", "default": "" },
    "ttsPitch": { "type": "number", "label": "语调", "desc": "0.5–2，默认1", "default": 1 },
    "ttsRate": { "type": "number", "label": "语速", "desc": "0.5–2，默认1", "default": 1 },
    "ttsVolume": { "type": "number", "label": "TTS音量", "desc": "0–100，默认100", "default": 100 },
    "systemSoundVolume": { "type": "number", "label": "系统音量", "desc": "播放音效时的系统主音量(0–100)", "default": 80 }
  }
}
