{
  "id": "morning.reading",
  "name": "早读助手",
  "icon": "ri-sun-foggy-line",
  "author": "LessonPlugin",
  "description": "站立早读提醒、早读看板等功能",
  "actions": [
    {
      "id": "openSettings",
      "icon": "ri-settings-3-line",
      "text": "打开设置",
      "target": "openSettings"
    },
    {
      "id": "openBoard",
      "icon": "ri-dashboard-2-line",
      "text": "打开早读看板",
      "target": "openBoard"
    }
  ],
  "dependencies": [
    "notify-plugin@^1.0.0"
  ],
  "version": "1.0.0"
  ,"variables": ["timeISO","pluginName"]
  ,"configSchema": {
    "periods": { "type": "json", "label": "站立早读时段", "desc": "[{ name,start,end,weekdays,biweek,... }]", "default": [] },
    "boardPeriods": { "type": "json", "label": "看板时段", "desc": "[{ name,start,end,weekdays,biweek,type }]", "default": [] }
  }
}
