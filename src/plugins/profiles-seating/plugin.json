{
  "id": "profiles.seating",
  "name": "档案-座次表",
  "version": "0.1.0",
  "author": "LessonPlugin",
  "icon": "ri-layout-bottom-line",
  "description": "使用底栏模板统一样式的座次表编辑界面",
  "actions": [
    {
      "id": "openSeating",
      "icon": "ri-layout-bottom-line",
      "text": "打开座次表",
      "target": "openSeating"
    }
  ],
  "dependencies": [
    "ui.lowbar",
    "profiles.students"
  ],
  "npmDependencies": {}
  ,"configSchema": {
    "rows": { "type": "json", "label": "排定义", "desc": "行头数组，含过道/普通", "default": [] },
    "cols": { "type": "json", "label": "列定义", "desc": "列头数组，含过道/普通", "default": [] },
    "seats": { "type": "json", "label": "座位映射", "desc": "{ rowId-colId: { name } }", "default": {} },
    "backgroundStatus": { "type": "string", "label": "背景状态", "desc": "默认/其他", "default": "默认" }
  }
}
