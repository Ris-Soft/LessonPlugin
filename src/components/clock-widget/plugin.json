{
  "id": "clock-widget",
  "name": "简易时钟",
  "version": "1.1.0",
  "type": "component",
  "entry": "index.html",
  "description": "一个简单的数字时钟组件",
  "group": "desktop_widget",
  "recommendedSize": {
    "width": 300,
    "height": 150
  },
  "configSchema": {
    "theme": {
      "type": "select",
      "label": "主题 (Theme)",
      "default": "light",
      "options": [
        { "label": "浅色 (Light)", "value": "light" },
        { "label": "深色 (Dark)", "value": "dark" }
      ]
    },
    "align": {
      "type": "select",
      "label": "对齐 (Align)",
      "default": "center",
      "options": [
        { "label": "居左 (Left)", "value": "left" },
        { "label": "居中 (Center)", "value": "center" },
        { "label": "居右 (Right)", "value": "right" }
      ]
    },
    "fontSize": {
      "type": "range",
      "label": "字体大小 (Font Size)",
      "default": 48,
      "min": 12,
      "max": 96,
      "step": 2
    },
    "showSeconds": {
      "type": "boolean",
      "label": "显示秒 (Show Seconds)",
      "default": true
    }
  }
}
