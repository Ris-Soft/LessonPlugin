{
  "id": "class-start-notify",
  "name": "上课提醒",
  "author": "LessonPlugin",
  "version": "1.0.0",
  "description": "每天08:00提醒今天的第一节课。",
  "triggers": [
    { "type": "time", "at": "08:00" }
  ],
  "conditions": {
    "mode": "and",
    "groups": [
      {
        "mode": "and",
        "items": [
          { "type": "weekdayIn", "value": [1, 2, 3, 4, 5] }
        ]
      }
    ]
  },
  "actions": [
    {
      "type": "pluginEvent",
      "pluginId": "notify-plugin",
      "event": "notify",
      "params": [
        { "key": "title", "value": "上课提醒" },
        { "key": "message", "value": "准备好今天的课程咯！" }
      ]
    },
    { "type": "wait", "seconds": 10 },
    {
      "type": "pluginAction",
      "pluginId": "lesson-board",
      "action": "open_today"
    }
  ],
  "confirm": { "enabled": false, "timeout": 60 },
  "dependencies": {
    "lesson-board": ">=1.0.0",
    "notify-plugin": ">=1.0.0"
  }
}