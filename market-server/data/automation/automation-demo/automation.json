{
  "id": "auto.classroom.demo",
  "name": "课堂自动化示例流程",
  "author": "LessonPlugin",
  "version": "1.0.0",
  "description": "在指定时间与条件下执行课堂场景相关动作",
  "triggers": [
    {
      "type": "time",
      "at": "08:00"
    },
    {
      "type": "protocol",
      "text": "lesson://start"
    }
  ],
  "conditions": {
    "mode": "and",
    "groups": [
      {
        "mode": "and",
        "items": [
          {
            "type": "weekdayIn",
            "value": [
              1,
              2,
              3,
              4,
              5
            ]
          },
          {
            "type": "biweek",
            "value": "even"
          }
        ]
      }
    ]
  },
  "actions": [
    {
      "type": "wait",
      "seconds": 5
    },
    {
      "type": "pluginEvent",
      "pluginId": "notify-plugin",
      "event": "toast",
      "params": [
        "上课提醒",
        "已开始上课",
        "warn",
        2000,
        false
      ]
    }
  ],
  "confirm": {
    "enabled": true,
    "timeout": 60
  },
  "dependencies": {
    "notify-plugin": ">=1.0.0"
  }
}