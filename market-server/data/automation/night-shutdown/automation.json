{
  "id": "night-shutdown",
  "name": "夜间关机",
  "author": "LessonPlugin",
  "version": "1.0.0",
  "description": "在22:30提示并执行关机。",
  "triggers": [
    { "type": "time", "at": "22:30" }
  ],
  "conditions": {
    "mode": "and",
    "groups": [
      {
        "mode": "and",
        "items": [
          { "type": "weekdayIn", "value": [1, 2, 3, 4, 5] }
        ]
      }
    ]
  },
  "actions": [
    {
      "type": "pluginEvent",
      "pluginId": "notify-plugin",
      "event": "notify",
      "params": [
        { "key": "title", "value": "夜间关机" },
        { "key": "message", "value": "准备关机，保存工作内容" }
      ]
    },
    { "type": "wait", "seconds": 30 },
    { "type": "power", "op": "shutdown" }
  ],
  "confirm": { "enabled": true, "timeout": 60 },
  "dependencies": {
    "notify-plugin": ">=1.0.0"
  }
}